# =============================================================================
# Production Environment Configuration
# =============================================================================
# SECURITY WARNING: This file contains sensitive production credentials.
# - NEVER commit this file to version control
# - Use secure secret management in production (AWS Secrets Manager, Vault, etc.)
# - Rotate credentials regularly
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
DEBUG=False
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-50-CHARACTER-RANDOM-STRING-USE-SECRETS-MANAGER

# Comma-separated list of your production domains
ALLOWED_HOSTS=api.yourdomain.com,yourdomain.com

# Django settings module
DJANGO_SETTINGS_MODULE=config.settings

# -----------------------------------------------------------------------------
# Security Settings (enforced when DEBUG=False)
# -----------------------------------------------------------------------------
# HTTPS/SSL settings
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# HSTS (HTTP Strict Transport Security) - 1 year
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Additional security
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# Use a managed PostgreSQL service in production (AWS RDS, Google Cloud SQL, etc.)
DATABASE_URL=postgres://prod_user:SECURE_PASSWORD_HERE@your-db-host.com:5432/prod_db

# Individual vars for reference (DATABASE_URL takes precedence)
POSTGRES_DB=prod_db
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=SECURE_PASSWORD_HERE
DATABASE_HOST=your-db-host.com
DATABASE_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# Use a managed Redis service in production (AWS ElastiCache, Redis Cloud, etc.)
REDIS_URL=redis://your-redis-host.com:6379/0
CELERY_BROKER_URL=redis://your-redis-host.com:6379/1
CELERY_RESULT_BACKEND=redis://your-redis-host.com:6379/1

# -----------------------------------------------------------------------------
# Celery Configuration
# -----------------------------------------------------------------------------
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=False

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Only allow your production frontend domains
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# -----------------------------------------------------------------------------
# OAuth Providers - Google
# -----------------------------------------------------------------------------
# Production credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# -----------------------------------------------------------------------------
# OAuth Providers - Apple
# -----------------------------------------------------------------------------
# Production credentials from: https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=your-production-apple-services-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
your-production-apple-private-key-contents
-----END PRIVATE KEY-----

# -----------------------------------------------------------------------------
# Email Configuration (Production SMTP)
# -----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-smtp-username
EMAIL_HOST_PASSWORD=your-smtp-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# Static & Media Files
# -----------------------------------------------------------------------------
# In production, consider using S3 or similar cloud storage
STATIC_URL=/static/
MEDIA_URL=/media/

# Optional: S3 configuration for media files
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=WARNING

# Optional: Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
