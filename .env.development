# =============================================================================
# Development Environment Configuration
# =============================================================================
# This file contains development settings with debug enabled and relaxed security.
# These values are suitable for local development only - NEVER use in production.
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
DEBUG=True
SECRET_KEY=dev-insecure-secret-key-change-this-in-production-use-50-chars-minimum
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Django settings module (used by manage.py and ASGI/WSGI)
DJANGO_SETTINGS_MODULE=config.settings

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://postgres:postgres@db:5432/app_dev

# Individual vars (used by docker-compose for PostgreSQL container)
POSTGRES_DB=app_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_HOST=db
DATABASE_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# Database 0 for Django cache, Database 1 for Celery broker
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# -----------------------------------------------------------------------------
# Celery Configuration
# -----------------------------------------------------------------------------
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=False

# -----------------------------------------------------------------------------
# CORS Configuration (for frontend development)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8081

# -----------------------------------------------------------------------------
# OAuth Providers - Google
# -----------------------------------------------------------------------------
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# -----------------------------------------------------------------------------
# OAuth Providers - Apple
# -----------------------------------------------------------------------------
# Get credentials from: https://developer.apple.com/account/resources/identifiers
# APPLE_CLIENT_ID is your Services ID (e.g., com.yourapp.auth)
# APPLE_TEAM_ID is your 10-character Team ID
# APPLE_KEY_ID is the Key ID for your Sign in with Apple private key
# APPLE_PRIVATE_KEY is the contents of the .p8 file (include BEGIN/END lines)
APPLE_CLIENT_ID=your-apple-services-id-here
APPLE_TEAM_ID=your-apple-team-id-here
APPLE_KEY_ID=your-apple-key-id-here
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-apple-private-key-contents-here\n-----END PRIVATE KEY-----"

# -----------------------------------------------------------------------------
# Email Configuration (Development - Console Backend)
# -----------------------------------------------------------------------------
# In development, emails are printed to console instead of being sent
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# -----------------------------------------------------------------------------
# Static & Media Files
# -----------------------------------------------------------------------------
STATIC_URL=/static/
MEDIA_URL=/media/

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=DEBUG
